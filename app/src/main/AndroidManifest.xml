        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmployeeActivity"
            android:label="@string/title_activity_employee" >
        </activity>
        <activity
            android:name=".SupplierActivity"
            android:label="@string/title_activity_supplier" >
        </activity>
        <activity
            android:name=".CustomerActivity"
            android:label="@string/title_activity_customer" >
        </activity>
        <activity
            android:name=".DetailedCustomerActivity"
            android:label="@string/title_activity_detailed_customer" >
        </activity>
        <activity
            android:name=".DetailedEmployeeActivity"
            android:label="@string/title_activity_detailed_employee" >
        </activity>
        <activity
            android:name=".DetailedSupplierActivity"
            android:label="@string/title_activity_detailed_supplier" >
        </activity>
        <activity
            android:name=".SQLViewerActivity"
            android:label="@string/title_activity_sqlviewer" >
        </activity>
    </application>

</manifest>
